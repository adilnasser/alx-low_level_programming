#include "main.h"

/**
 * puts2- nction that prints every other character of a string, starting with the first character,
 * @str :string
 * Return: No Return;
 */


void puts2(char *str)
{
	int length_Of_String = 0;

	int i = 0;

	while (str[length_Of_String] != '\0')
	{
		for (i = 0 ; i <= length_Of_String  ; i++)
		{
			if (i % 2 == 0)
				_putchar(str[i]);
		}
	}
	_putchar('\n');

}
